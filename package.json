{
  "name": "angular-boilerplate",
  "version": "0.0.27",
  "scripts": {
    "pwa-assets-generator": "pwa-asset-generator src/assets/imgs/logo.svg src/assets/icons -t png -f true -i src/index.html -m src/manifest.webmanifest --path-override assets/icons --opaque false -p 0 --mstile",
    "start": "ng serve -c test --hmr --o --port 3001",
    "start-dist": "start http://127.0.0.1:8080/ && cd dist && http-server -c-1 .",
    "build": "ng build -c production",
    "build:app-shell:demo": "npm run pwa-assets-generator && npm run format-index && ng run angular-boilerplate:app-shell:demo",
    "build:app-shell:production": "npm run pwa-assets-generator && npm run format-index && ng run angular-boilerplate:app-shell:production",
    "build-start-open:app-shell:demo": "npm run build:app-shell:demo && npm run start-dist",
    "firebase-init": "firebase init",
    "firebase-deploy": "firebase deploy",
    "deploy-open-app-shell:demo": "npm run build:app-shell:demo && npm run firebase-deploy && start https://test-e0560.web.app/",
    "deploy-open-app-shell:production": "npm run build:app-shell:production && npm run firebase-deploy && start https://test-e0560.web.app/",
    "deploy-open-app": "npm run pwa-assets-generator && npm run format-index && npm run build && npm run firebase-deploy && start https://test-e0560.web.app/",
    "format-code": "prettier --write ./{src,e2e}/**/*.{ts,js,html,scss} --ignore-path .prettierignore",
    "format-index": "prettier --write src/index.html --ignore-path .prettierignore",
    "npm-check-update": "ncu",
    "npm-check-unused-pckg": "depcheck",
    "test": "ng test",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.0.3",
    "@angular/cdk": "^11.0.1",
    "@angular/common": "~11.0.3",
    "@angular/compiler": "~11.0.3",
    "@angular/core": "~11.0.3",
    "@angular/forms": "~11.0.3",
    "@angular/material": "^11.0.1",
    "@angular/platform-browser": "~11.0.3",
    "@angular/platform-browser-dynamic": "~11.0.3",
    "@angular/platform-server": "~11.0.3",
    "@angular/router": "~11.0.3",
    "@angular/service-worker": "~11.0.3",
    "rxjs": "~6.6.3",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "10.0.1",
    "@angular-devkit/build-angular": "~0.1100.3",
    "@angular/cli": "~11.0.3",
    "@angular/compiler-cli": "~11.0.3",
    "@angularclass/hmr": "^3.0.0",
    "@ngneat/tailwind": "^3.0.6",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.12.45",
    "autoprefixer": "10.0.4",
    "codelyzer": "^6.0.0",
    "depcheck": "^1.3.1",
    "husky": "^4.2.5",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.1.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "npm-check-updates": "^10.2.3",
    "postcss": "8.1.14",
    "postcss-import": "13.0.0",
    "postcss-loader": "4.1.0",
    "postcss-scss": "3.0.4",
    "postcss-url": "^10.1.1",
    "prettier": "^2.2.1",
    "protractor": "~7.0.0",
    "pwa-asset-generator": "^4.0.1",
    "tailwindcss": "^2.0.1",
    "tailwindcss-children": "^2.1.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "^4.0.5",
    "webpack-merge": "^5.4.0"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false,
    "overrides": [
      {
        "files": "*.scss",
        "options": {
          "singleQuote": false
        }
      }
    ]
  }
}
